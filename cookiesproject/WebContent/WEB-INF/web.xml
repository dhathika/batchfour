<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>cookiesproject</display-name>
	<welcome-file-list>
		<welcome-file>first.html</welcome-file>
	</welcome-file-list>
	<!-- first servlet configuration  -->
	<servlet>
		<servlet-name>firstservlet</servlet-name>
		<servlet-class>com.dhathika.controllers.FirstServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>firstservlet</servlet-name>
		<url-pattern>/one</url-pattern>
	</servlet-mapping>
	
	<!-- second servlet configuration  -->
	<servlet>
		<servlet-name>secondservlet</servlet-name>
		<servlet-class>com.dhathika.controllers.SecondServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>secondservlet</servlet-name>
		<url-pattern>/two</url-pattern>
	</servlet-mapping>
</web-app>